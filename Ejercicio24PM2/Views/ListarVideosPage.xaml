<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:video="clr-namespace:Xam.Forms.VideoPlayer;assembly=Xam.Forms.VideoPlayer"
             x:Class="Ejercicio24PM2.Views.ListarVideosPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="DarkRed" Padding="24" CornerRadius="0">
                <Label Text="Lista de Videos" HorizontalTextAlignment="Center" TextColor="White" FontSize="24"/>
            </Frame>
            <ListView x:Name="listaVideos" ItemTapped="listaVideos_ItemTapped" >
                <ListView.ItemTemplate >
                    <DataTemplate>

                        <ViewCell >
                            <StackLayout >
                                <Grid Padding="10,0,10,0">
                                    <Label Grid.Column="0" Text="{Binding Id}"/>
                                    <Label Grid.Column="1" Text="{Binding Descripcion}"/>
                                    <Label Grid.Column="3" Text="{Binding Uri}"/>
                                </Grid>
                            </StackLayout>

                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>